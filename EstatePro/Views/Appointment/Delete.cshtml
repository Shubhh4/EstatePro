@model Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h4>Are you sure you want to delete this appointment?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Property</dt>
        <dd class="col-sm-10">@Model.Property?.Title</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.Email</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate?.ToString("f")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>