@model Report

@{
    ViewData["Title"] = "Edit Report";
}

<h2>Edit Report</h2>

<form method="post">
    <input type="hidden" asp-for="ReportId" />
    <div class="form-group">
        <label>Report Type</label>
        <select asp-for="ReportType" class="form-control">
            <option>Sales</option>
            <option>Rentals</option>
            <option>Maintenance</option>
        </select>
    </div>
    <div class="form-group">
        <label>Report Data (JSON)</label>
        <textarea asp-for="ReportData" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
