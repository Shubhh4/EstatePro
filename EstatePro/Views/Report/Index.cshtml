@model DashboardView

<style>
    .dashboard-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-title {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: bold;
        color: #333;
    }

    .dashboard-row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
        justify-content: center;
    }

    .dashboard-card {
        flex: 1 1 160px;
        background: linear-gradient(135deg, #343a40, #212529);
        color: #fff;
        text-align: center;
        border-radius: 8px;
        padding: 15px 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .dashboard-card.bg-primary {
            background: #007bff;
        }

        .dashboard-card.bg-success {
            background: #28a745;
        }

        .dashboard-card.bg-danger {
            background: #dc3545;
        }

        .dashboard-card.bg-warning {
            background: #ffc107;
            color: #212529;
        }

        .dashboard-card.bg-info {
            background: #17a2b8;
        }

        .dashboard-card.bg-secondary {
            background: #6c757d;
        }

        .dashboard-card h6 {
            font-size: 0.9rem;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .dashboard-card h4 {
            font-size: 1.5rem;
            margin: 0;
        }

    .chart-card {
        margin-top: 30px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    #propertyChart {
        max-width: 100%;
        height: 250px !important;
    }

    .chart-card canvas {
        display: block;
        max-width: 100%;
        height: 250px !important;
        margin: 20px auto;
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-title">Reports</div>
    <div class="dashboard-row">
        @if (Model.Role == "Admin")
        {
            <div class="dashboard-card bg-success">
                <h6>Total Transaction Amount</h6>
                <h4>₹@Model.TotalTransactionAmount</h4>
            </div>
        }
    </div>

    <div class="dashboard-row">
        @if (Model.Role == "Admin")
        {
            <div class="dashboard-card bg-success">
                <h6>Total Rent Transaction Amount</h6>
                <h4>₹@Model.TotalRentAmount</h4>
            </div>
        }
    </div>
    <div class="chart-card">
        <h6>User Distribution</h6>
        <canvas id="userChart"></canvas>
    </div>
    <div class="chart-card">
        <h6>Property Status</h6>
        <canvas id="propertyChart"></canvas>
    </div>
    <div class="chart-card">
        <h6>Lease Status</h6>
        <canvas id="leaseChart"></canvas>
    </div>


</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('propertyChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Available', 'Sold', 'Rented'],
                datasets: [{
                    data: [@Model.AvailableProperties, @Model.SoldProperties, @Model.RentedProperties],
                    backgroundColor: ['#28a745', '#dc3545', '#007bff']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
        const ctx3 = document.getElementById('leaseChart').getContext('2d');
        new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Accepted', 'Pending', 'Rejected'],
                datasets: [{
                    data: [@Model.AcceptedLease, @Model.PendingLease, @Model.RejectedLease],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
        const ctx2 = document.getElementById('userChart').getContext('2d');
        new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Agent', 'Seller','Buyer','Tenant'],
                datasets: [{
                    data: [@Model.TotalAgents, @Model.TotalSellers, @Model.TotalBuyers, @Model.TotalTenants],
                    backgroundColor: ['#28a745', '#dc3545', '#007bff','#ffc107']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
