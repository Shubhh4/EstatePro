@model List<Transaction>

<h2>Transaction History</h2>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Property</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Status</th>
            <th>Date</th>
            <th>Receipt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransactionId</td>
                <td>@t.Booking.User.FirstName @t.Booking.User.LastName</td>
                <td>@t.Booking.Property.Title</td>
                <td>₹@t.Amount</td>
                <td>@t.PaymentMethod</td>
                <td>@t.PaymentStatus</td>
                <td>@t.TransactionDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="/Booking/DownloadReceipt/@t.TransactionId">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
