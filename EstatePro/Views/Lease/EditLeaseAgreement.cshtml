@model LeaseAgreement
@{
    ViewData["Title"] = "Edit Lease Agreement";
}

<h2>Edit Lease Agreement</h2>

<form asp-action="EditLeaseAgreement" method="post">

    <input type="hidden" asp-for="LeaseId" />


    <div class="form-group">
        <label>Property</label>
        <input type="text" class="form-control" value="@ViewBag.PropertyTitle" disabled />
    </div>

    <div class="form-group">
        <label>Tenant Name</label>
        <input type="text" class="form-control" value="@ViewBag.TenantName" disabled />
    </div>

    <div class="form-group">
        <label asp-for="LeaseStartDate"></label>
        <input asp-for="LeaseStartDate" type="date" class="form-control" />
        <span asp-validation-for="LeaseStartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LeaseEndDate"></label>
        <input asp-for="LeaseEndDate" type="date" class="form-control" />
        <span asp-validation-for="LeaseEndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RentAmount"></label>
        <input asp-for="RentAmount" class="form-control" />
        <span asp-validation-for="RentAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecurityDeposit"></label>
        <input asp-for="SecurityDeposit" class="form-control" />
        <span asp-validation-for="SecurityDeposit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit Lease</button>
</form>

