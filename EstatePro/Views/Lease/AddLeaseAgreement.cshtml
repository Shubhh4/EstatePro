@model LeaseAgreement

<h2>Add Lease Agreement</h2>

<form asp-action="AddLeaseAgreement" method="post">
    <div class="form-group">
        <label for="BookingId">Select Booking</label>
        <select asp-for="BookingId" class="form-control" asp-items="@ViewBag.Bookings">
            <option value="">-- Select Booking --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LeaseStartDate"></label>
        <input asp-for="LeaseStartDate" type="date" class="form-control" />
        <span asp-validation-for="LeaseStartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LeaseEndDate"></label>
        <input asp-for="LeaseEndDate" type="date" class="form-control" />
        <span asp-validation-for="LeaseEndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RentAmount"></label>
        <input type="number" asp-for="RentAmount" class="form-control" />
        <span asp-validation-for="RentAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecurityDeposit"></label>
        <input type="number" asp-for="SecurityDeposit" class="form-control" />
        <span asp-validation-for="SecurityDeposit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Lease</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

