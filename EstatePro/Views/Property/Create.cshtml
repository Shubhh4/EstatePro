@model Property
@{
    ViewData["Title"] = "Create Property";
}

<h2>Create Property</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>State</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Zip Code</label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Property Type</label>
        <select asp-for="PropertyType" asp-items="ViewBag.PropertyTypes" class="form-control">
            <option value="">-- Select Type --</option>
        </select>
    </div>
    <span asp-validation-for="PropertyType" class="text-danger"></span>

    <div class="form-group">
        <label>Listing Type</label>
        <select asp-for="ListingType" asp-items="ViewBag.ListingTypes" class="form-control">
            <option value="">-- Select Listing --</option>
        </select>
    </div>
    <span asp-validation-for="ListingType" class="text-danger"></span>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control">
            <option value="">-- Select Status --</option>
        </select>
    </div>
    <span asp-validation-for="Status" class="text-danger"></span>

    <div class="form-group">
        <label>Upload Images</label>
        <input type="file" name="images" multiple class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

