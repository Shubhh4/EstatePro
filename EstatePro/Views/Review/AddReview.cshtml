@model Review
<partial name="Notification"></partial>
@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="AddReview" method="post">
    <input type="hidden" asp-for="PropertyId"/>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Review</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
