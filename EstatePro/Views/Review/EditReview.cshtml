@model EstatePro.Models.Review
<partial name="Notification"></partial>
<h2>Edit Review</h2>

<form asp-action="EditReview" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReviewId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="PropertyId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
