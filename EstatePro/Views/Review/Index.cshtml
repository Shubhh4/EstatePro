@model List<Review>

<h2>All Reviews</h2>

<form method="post">
    <input type="text" name="txt" placeholder="Search reviews..." />
    <button type="submit">Search</button>
</form>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}
@if (TempData["upd"] != null)
{
    <div class="alert alert-info">@TempData["upd"]</div>
}
@if (TempData["danger"] != null)
{
    <div class="alert alert-danger">@TempData["danger"]</div>
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Property</th>
                <th>Rating</th>
                <th>Review</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.User.FirstName @r.User.LastName</td>
                    <td>@r.Property.Title</td>
                    <td>@r.Rating</td>
                    <td>@r.ReviewText</td>
                    <td>@r.ReviewDate?.ToString("dd MMM yyyy")</td>
                    <td>
                        <a href="/Review/EditReview/@r.ReviewId" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Review/DeleteReview/@r.ReviewId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews found.</p>
}
