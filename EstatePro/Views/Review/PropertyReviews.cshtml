@model List<EstatePro.Models.Review>

@{
    ViewData["Title"] = "Reviews for Property";
    var propertyId = ViewBag.PropertyId as int?;
}

<h2>Reviews for Property @propertyId</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Rating</th>
            <th>Review Text</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="4">No reviews found for this property.</td></tr>
        }
        else
        {
            foreach (var review in Model)
            {
                <tr>
                    <td>@review.User?.FirstName</td>
                    <td>@review.Rating</td>
                    <td>@review.ReviewText</td>
                    <td>
                        @review.ReviewDate?.ToShortDateString()
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Index">Back to All Reviews</a>

